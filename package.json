{
  "name": "chinese-name-generator",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "dev:alt": "next dev -p 3001",
    "dev:alt2": "next dev -p 3002",
    "dev:alt3": "next dev -p 3003",
    "prebuild": "node deploy.js && rimraf .next && echo 'Preparing build environment...'",
    "build": "next build",
    "cloudflare-build": "node cloudflare-build.js",
    "deploy": "node cloudflare-build.js && wrangler pages deploy .next --config-path=cloudflare-config/pages-config.json",
    "deploy:cf": "node cloudflare-build.js && wrangler pages deploy .next --config-path=cloudflare-config/pages-config.json",
    "deploy:win": "node cloudflare-build.js",
    "start": "next start",
    "start:alt": "next start -p 3001",
    "export": "next build && next export",
    "lint": "next lint",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:e2e": "playwright test",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:name-generator": "playwright test e2e/name-generator.spec.ts",
    "test:e2e:faq": "playwright test e2e/faq.spec.ts",
    "test:e2e:home": "playwright test e2e/home.spec.ts"
  },
  "dependencies": {
    "@cloudflare/kv-asset-handler": "^0.4.0",
    "@headlessui/react": "^1.7.17",
    "@heroicons/react": "^2.0.18",
    "@types/node": "^20.10.5",
    "@types/react": "^18.2.45",
    "@types/react-dom": "^18.2.18",
    "framer-motion": "^10.16.4",
    "next": "13.5.4",
    "react": "18.2.0",
    "react-dom": "18.2.0",
    "react-icons": "^5.5.0",
    "react-intersection-observer": "^9.5.2",
    "rimraf": "^5.0.10",
    "typescript": "^5.3.3",
    "zustand": "^4.4.1"
  },
  "devDependencies": {
    "@babel/preset-env": "^7.23.9",
    "@babel/preset-react": "^7.23.3",
    "@babel/preset-typescript": "^7.23.3",
    "@fontsource/liu-jian-mao-cao": "^5.2.5",
    "@fontsource/ma-shan-zheng": "^5.2.5",
    "@playwright/test": "^1.41.2",
    "@tailwindcss/forms": "^0.5.10",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^29.5.14",
    "autoprefixer": "10.4.16",
    "babel-jest": "^29.7.0",
    "babel-loader": "^9.1.3",
    "eslint": "8.50.0",
    "eslint-config-next": "13.5.4",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "postcss": "8.4.31",
    "tailwindcss": "3.3.3"
  }
}
