{
  "name": "getchinesename",
  "build": {
    "baseDir": ".next",
    "command": "npm run cloudflare-build",
    "publicPath": "",
    "ignoredFiles": ["node_modules/.cache/**", ".next/cache/**"]
  },
  "deployment": {
    "routes": [
      { "pattern": "/*", "script": "index.js" }
    ],
    "kv": {
      "ASSETS": {
        "binding": "ASSETS"
      }
    }
  },
  "env": {
    "NODE_VERSION": "18",
    "NEXT_TELEMETRY_DISABLED": "1",
    "NEXT_RUNTIME": "edge"
  },
  "limits": {
    "kv_max_entry_size": "24MiB"
  },
  "build_config": {
    "upload_config": {
      "max_file_size": 25000000,
      "chunk_size": 10000000,
      "max_chunks": 100
    },
    "optimization": {
      "minify_js": true,
      "minify_css": true,
      "minify_html": true,
      "treeshake": true
    }
  }
} 